{
    "asset_name": "Animation (maya)",
    "asset_type": "anim",
    "context": ["Task"],
    "publish": {
        "plugins" : [
            {
                "context": [
                    {
                        "ui": "custom_context.widget.qt",
                        "call":"context_set",
                        "name" : "Set Context",
                        "options": {"context_id": null, "asset_name": null},
                        "description": "Set context where to publish to"
                    }
                ]
            },
            {
                "collectors": [
                    {
                        "call":"from_set.maya",
                        "name" : "From Maya Set",
                        "options": {"set_name": "geometry"},
                        "description": "collect all the geometry in maya set with the given name."
                    }
                ]
            },
            {
                "validators": [
                    {
                        "call": "nonempty",
                        "name" : "Is not empty",
                        "description": "check whether the result of collection is not empty."

                    }
                ]
            },
            {
                "extractors": [
                    {
                        "name" : "Save as Maya Ascii",
                        "call": "to_tmp.maya.ma",
                        "options": {"component_name": "mayaAscii.ma"},
                        "description": "Save an .ma file in /tmp"

                    },
                    {
                        "name" : "Save as Maya Binary",
                        "call": "to_tmp.maya.mb",
                        "options": {"component_name": "mayaBinary.mb"},
                        "description": "Save an .mb file in /tmp"

                    }
                ]
            },
            {
                "publishers": [
                    {
                        "name" : "Publish to ftrack",
                        "call": "result",
                        "description": "publish the result files to ftrack.",
                        "visible": false
                    }
                ]
            }
        ]
    },
    "load": {
        "plugins": [
               {
                "context": [
                    {
                        "ui": "custom_context.widget.qt",
                        "call":"context_set",
                        "name" : "Set Context",
                        "options": {"context_id": null, "asset_name": null},
                        "description": "Set context where to publish to"
                    }
                ]
            },
            {
                "importers": [
                    {
                        "call":"importers.test.cam",
                        "options": {"component_prefix": "CAM"}
                    }
                ]
            }
        ]
    }
}